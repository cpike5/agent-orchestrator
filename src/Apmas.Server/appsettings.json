{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "Apmas": {
    "ProjectName": "task-tracker",
    "WorkingDirectory": "C:\\Users\\cpike\\workspace\\test-projects\\bookshelf",
    "DataDirectory": ".apmas",
    "Timeouts": {
      "DefaultMinutes": 30,
      "HeartbeatIntervalMinutes": 5,
      "HeartbeatTimeoutMinutes": 10,
      "MaxRetries": 3,
      "AgentOverrides": {
        "discovery": 10,
        "design-prep": 10,
        "architect": 15,
        "designer": 15,
        "developer": 45,
        "prototyper": 20,
        "reviewer": 20,
        "tester": 30
      }
    },
    "Agents": {
      "Roster": [
        {
          "Role": "discovery",
          "SubagentType": "general-purpose",
          "Dependencies": [],
          "Description": "Project discovery - reviews brief, creates README/CLAUDE.md, gathers context",
          "PromptType": "DiscoveryPrompt"
        },
        {
          "Role": "design-prep",
          "SubagentType": "systems-architect",
          "Dependencies": [ "discovery" ],
          "Description": "Design preparation - creates UI component inventory and user flows (skips for non-UI)",
          "PromptType": "DesignPrepPrompt"
        },
        {
          "Role": "architect",
          "SubagentType": "systems-architect",
          "Dependencies": [ "discovery" ],
          "Description": "System architecture, technical design, and task breakdown",
          "PromptType": "ArchitectPrompt"
        },
        {
          "Role": "designer",
          "SubagentType": "design-specialist",
          "Dependencies": [ "design-prep" ],
          "Description": "UI/UX design and design systems",
          "PromptType": "DesignerPrompt"
        },
        {
          "Role": "prototyper",
          "SubagentType": "html-prototyper",
          "Dependencies": [ "designer" ],
          "Description": "HTML/CSS/JS prototypes and UI implementation",
          "PromptType": "HtmlPrototyperPrompt"
        },
        {
          "Role": "ui-critic",
          "SubagentType": "ui-critic",
          "Dependencies": [ "prototyper" ],
          "Description": "UI quality review and visual feedback",
          "PromptType": "UiCriticPrompt"
        },
        {
          "Role": "developer",
          "SubagentType": "dotnet-specialist",
          "Dependencies": [ "architect", "designer", "prototyper" ],
          "Description": "Implementation and coding",
          "PromptType": "DeveloperPrompt"
        },
        {
          "Role": "reviewer",
          "SubagentType": "code-reviewer",
          "Dependencies": [ "developer" ],
          "Description": "Code review and quality checks",
          "PromptType": "ReviewerPrompt"
        }
      ]
    },
    "HttpTransport": {
      "Enabled": true,
      "Port": 5050,
      "Host": "127.0.0.1",
      "SseKeepAliveSeconds": 30,
      "MaxRequestBodySize": 10485760
    },
    "Spawner": {
      "ClaudeCodePath": "C:\\Users\\cpike\\AppData\\Roaming\\npm\\claude.cmd",
      "Model": "sonnet",
      "MaxTurns": 100,
      "McpConfigPath": null,
      "UseHttpTransport": true,
      "GracefulShutdownTimeoutMs": 5000,
      "DangerouslySkipPermissions": true,
      "OutputFormat": "stream-json",
      "LogAgentOutput": false
    },
    "ProjectBrief": {
      "FilePath": "PROJECT-BRIEF.md",
      "Required": false,
      "MaxSizeKb": 100
    },
    "TaskOrchestration": {
      "Enabled": false,
      "ReviewAfterEachPhase": true,
      "VerifyBuildAfterEachTask": true,
      "MaxConcurrentTasks": 1,
      "DeveloperSubagentType": "dotnet-specialist"
    }
  }
}
